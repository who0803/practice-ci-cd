message="$(cat "$1")"
requiredPattern="^(feat|fix|design|docs|style|refactor|test|conf|rename|remove):.*$"
mergePattern="^Merge (branch|pull request).*$"

if ! [[ $message =~ $requiredPattern || $message =~ $mergePattern ]]; then
  echo "=========================================================================="
  echo "======================   🚨 WRONG COMMIT MESSAGE!   ======================"
  echo "========== 예: feat: 로그인 페이지 구현 / fix: 회원가입 오류 수정 ========="
  echo "=========================================================================="
  exit 1
else
  echo "=========================================================================="
  echo "======================      COMMIT SUCCESS !!      ======================="
  echo "=========================================================================="
fi